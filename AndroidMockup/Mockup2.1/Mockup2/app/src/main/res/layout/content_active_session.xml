<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_active_session"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.swe.gruppe4.mockup2.ActiveSessionActivity"
    tools:showIn="@layout/app_bar_active_session" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.swe.gruppe4.mockup2.ActiveSessionActivity"
        android:id="@+id/rl_active_session">
        <!--tools:showIn="@layout/app_bar_active_session"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"> -->

        <TextView
            android:text="G101"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_room_number"
            android:fontFamily="sans-serif"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="@string/session_quit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_session_quit"
            android:textSize="12sp"
            android:layout_below="@+id/img_room_photo"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp" />

        <Button
            android:text="@string/session_renew"
            android:layout_height="wrap_content"
            android:id="@+id/btn_session_renew"
            android:layout_width="100dp"
            android:textSize="12sp"
            android:layout_alignBaseline="@+id/btn_session_quit"
            android:layout_alignBottom="@+id/btn_session_quit"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="@string/session_active_until"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_session_active_until_label"
            android:layout_alignBaseline="@+id/btn_session_quit"
            android:layout_alignBottom="@+id/btn_session_quit"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="@string/session_active_until_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_session_active_until_label"
            android:layout_centerHorizontal="true"
            android:id="@+id/txt_session_active_until" />

        <Button
            android:text="@string/set_tag"
            android:layout_width="100dp"
            android:id="@+id/btn_set_tag"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_session_quit"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_marginTop="13dp"
            android:layout_below="@+id/txt_room_number"
            android:layout_width="match_parent"
            app:srcCompat="@drawable/img4639small"
            android:id="@+id/img_room_photo"
            android:contentDescription="@string/img_room_photo_content"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />




        <ListView
            android:layout_width="match_parent"
            android:id="@+id/list_people_in_room"
            android:layout_below="@+id/txt_people_in_room_label"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_height="250dp"/>

        <TextView
            android:text="@string/tag_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_tag_lable"
            android:layout_alignBaseline="@+id/txt_tag"
            android:layout_alignBottom="@+id/txt_tag"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp" />

        <TextView
            android:text="@string/people_in_room_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_people_in_room_label"
            android:layout_alignBaseline="@+id/txt_people_in_room_cnt"
            android:layout_alignBottom="@+id/txt_people_in_room_cnt"
            android:layout_alignStart="@+id/txt_tag_lable" />

        <TextView
            android:text="@string/people_in_room_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_people_in_room_cnt"
            android:layout_below="@+id/btn_set_tag"
            android:layout_toEndOf="@+id/txt_people_in_room_label" />

        <TextView
            android:text="PrÃ¤sentation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_tag"
            android:layout_alignBaseline="@+id/btn_set_tag"
            android:layout_alignBottom="@+id/btn_set_tag"
            android:layout_centerHorizontal="true" />
        <!--android:minHeight="500dp" />-->
    </RelativeLayout>

</ScrollView>


