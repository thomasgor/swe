<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_lecture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.swe.gruppe4.mockup2.AddLectureActivity">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:id="@+id/textView4" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText2"
        android:id="@+id/spinner"
        android:layout_below="@+id/editText2"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Raum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/spinner"
        android:layout_alignStart="@+id/textView4"
        android:id="@+id/textView5"
        android:paddingBottom="10dp" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_below="@+id/spinner"
        android:layout_alignStart="@+id/spinner"
        android:layout_marginTop="19dp"
        android:id="@+id/fromTime"
        android:text="12:00" />

    <Button
        android:text="Speichern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:id="@+id/saveLectureButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Vorlesung SWE"
        android:ems="10"
        android:layout_marginEnd="30dp"
        android:id="@+id/editText2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Bis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignBaseline="@+id/fromTime"
        android:layout_alignBottom="@+id/fromTime"
        android:layout_alignStart="@+id/fromTime"
        android:layout_marginStart="82dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/toTime"
        android:text="13:00"
        android:layout_alignBaseline="@+id/fromTime"
        android:layout_alignBottom="@+id/fromTime"
        android:layout_toEndOf="@+id/textView7"
        android:layout_marginStart="17dp" />

    <TextView
        android:text="Datum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:id="@+id/textViewDate" />

    <TextView
        android:text="Von"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignBaseline="@+id/fromTime"
        android:layout_alignBottom="@+id/fromTime"
        android:layout_alignStart="@+id/textViewDate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/DateEditText"
        android:text="24.10.2016"
        android:layout_alignBaseline="@+id/textViewDate"
        android:layout_alignBottom="@+id/textViewDate"
        android:layout_alignStart="@+id/spinner" />

</RelativeLayout>
