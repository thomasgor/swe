app:layout_behavior="@string/appbar_scrolling_view_behavior"> -->

<TextView
    android:text="@string/room_number"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txt_room_number"
    android:fontFamily="sans-serif"
    android:textSize="30sp"
    android:textColor="@android:color/black"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />

<Button
    android:text="@string/btn_goto_text"
    android:layout_height="wrap_content"
    android:id="@+id/btn_goto"
    android:textSize="12sp"
    android:layout_below="@+id/img_room_photo"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="15dp"
    android:drawableStart="@drawable/ic_menu_camera"
    android:layout_width="fill_parent"
    android:layout_alignParentStart="true" />


<com.makeramen.roundedimageview.RoundedImageView
    android:layout_width="match_parent"
    app:srcCompat="@drawable/ic_hourglass_empty_black_24dp"
    app:riv_corner_radius="5dip"
    android:id="@+id/img_room_photo"
    android:contentDescription="@string/img_room_photo_content"
    android:layout_height="200dp"
    android:scaleType="centerCrop"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true" />



<ListView
    android:layout_width="match_parent"
    android:id="@+id/list_people_in_room"
    android:layout_below="@+id/txt_people_in_room_label"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="10dp"
    android:layout_height="250dp"/>

<TextView
    android:text="@string/tag_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txt_tag_label"
    android:layout_alignBaseline="@+id/txt_tag"
    android:layout_alignBottom="@+id/txt_tag"
    android:layout_alignParentStart="true"
    android:layout_marginStart="9dp" />

<TextView
    android:text="@string/people_in_room_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txt_people_in_room_label"
    android:layout_alignBaseline="@+id/txt_people_in_room_cnt"
    android:layout_alignBottom="@+id/txt_people_in_room_cnt"
    android:layout_alignStart="@+id/txt_tag_label" />

<TextView
    android:text="@string/tag"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txt_tag"
    android:layout_below="@+id/btn_goto"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="8dp" />

<TextView
    android:text="@string/people_in_room_cnt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txt_people_in_room_cnt"
    android:layout_marginTop="20dp"
    android:gravity="start"
    android:layout_below="@+id/txt_tag"
    android:layout_alignStart="@+id/txt_tag" />
<!--android:minHeight="500dp" />-->
</RelativeLayout>
