<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_room_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.swe.gruppe4.mockup2.RoomDetailsActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_height="100dp"
        android:id="@+id/list_people_in_room" />

    <TextView
        android:text="@string/people_in_room_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/list_people_in_room"
        android:layout_alignParentStart="true"
        android:id="@+id/txt_people_in_room_label" />

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/img4639"
        android:id="@+id/img_room_photo"
        android:scaleType="centerCrop"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:text="G101"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_room_number"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:textSize="30sp"
        android:textColor="@android:color/black" />

    <Button
        android:text="@string/session_quit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_session_quit"
        android:textSize="12sp"
        android:layout_below="@+id/img_room_photo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp" />

    <Button
        android:text="@string/session_renew"
        android:layout_height="wrap_content"
        android:id="@+id/btn_session_renew"
        android:layout_width="100dp"
        android:textSize="12sp"
        android:layout_alignBaseline="@+id/btn_session_quit"
        android:layout_alignBottom="@+id/btn_session_quit"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/session_active_until"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_session_active_until_label"
        android:layout_alignBaseline="@+id/btn_session_quit"
        android:layout_alignBottom="@+id/btn_session_quit"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="12:00 Uhr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_session_active_until_label"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_session_active_until" />

    <TextView
        android:text="5/22 (3 Anonyme)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/list_people_in_room"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_people_in_room_cnt" />

    <TextView
        android:text="Tag:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_people_in_room_label"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:id="@+id/txt_tag_lable" />

    <TextView
        android:text="PrÃ¤sentation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_tag_lable"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_tag" />

    <Button
        android:text="Tag setzen"
        android:layout_width="100dp"
        android:id="@+id/btn_set_tag"
        android:textSize="10sp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/txt_tag"
        android:layout_alignBottom="@+id/txt_tag"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_session_quit"
        android:layout_marginTop="440dp" />

</RelativeLayout>
