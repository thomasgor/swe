<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_room_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.swe.gruppe4.freespace.RoomDetailsActivity"
    android:layout_marginTop="-7dp"
    android:layout_marginStart="-4dp"
    android:layout_marginEnd="-4dp">
    <!--tools:showIn="@layout/app_bar_active_session"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"> -->

    <RelativeLayout
        android:id="@+id/content_active_session2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:elevation="4dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin">
        <TextView
            android:text="@string/room_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_room_number"
            android:fontFamily="sans-serif"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:text="@string/btn_goto_text"
            android:layout_height="wrap_content"
            android:id="@+id/btn_goto"
            android:textSize="12sp"
            android:layout_below="@+id/img_room_photo"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/ic_menu_camera"
            android:layout_width="fill_parent"
            android:layout_alignParentStart="true" />



        <Button
            android:text="@string/set_tag"
            android:layout_width="100dp"
            android:id="@+id/btn_set_tag"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_goto"
            android:layout_alignParentEnd="true"
            android:visibility="invisible" />


        <TextView
            android:text="@string/tag_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_tag_label"
            android:layout_alignBaseline="@+id/txt_tag"
            android:layout_alignBottom="@+id/txt_tag"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp" />

        <TextView
            android:text="@string/people_in_room_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_people_in_room_label"
            android:layout_alignBaseline="@+id/txt_people_in_room_cnt"
            android:layout_alignBottom="@+id/txt_people_in_room_cnt"
            android:layout_alignStart="@+id/txt_tag_label" />

        <TextView
            android:text="@string/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_tag"
            android:layout_alignBaseline="@+id/btn_set_tag"
            android:layout_alignBottom="@+id/btn_set_tag"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="@string/people_in_room_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_people_in_room_cnt"
            android:layout_below="@+id/btn_set_tag"
            android:layout_alignStart="@+id/txt_tag" />
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/ic_hourglass_empty_black_24dp"
            app:riv_corner_radius="5dip"
            android:id="@+id/img_room_photo"
            android:contentDescription="@string/img_room_photo_content"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_active_session2"
        android:id="@+id/listcontent"
        android:clipToPadding="false">

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/list_people_in_room"

            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_height="match_parent" />

    </RelativeLayout>


    <!--android:minHeight="500dp" />-->
</RelativeLayout>


