<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swe.gruppe4.freespace">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--<uses-permission android:name="android.permission.GET_ACCOUNTS" />-->
    <!--<uses-permission android:name="android.permission.USE_CREDENTIALS" />-->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission-sdk-23 android:name="android.permission.CAMERA" />
    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />
    <!--<uses-permission-sdk-23 android:name="android.permission.GET_ACCOUNTS" />-->
    <!--<uses-permission-sdk-23 android:name="android.permission.USE_CREDENTIALS" />-->

    <uses-feature android:name="android.hardware.camera" />



    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_appicon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.google.android.gms.vision.DEPENDENCIES" android:value="barcode"/>

        <!-- Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_stat_notify_appicon" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <activity
            android:name="com.swe.gruppe4.freespace.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.swe.gruppe4.mockup2.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.swe.gruppe4.freespace.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="com.swe.gruppe4.freespace.Freundesliste"
            android:label="@string/title_activity_freundesliste"
            android:parentActivityName="com.swe.gruppe4.freespace.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swe.gruppe4.freespace.MainActivity" />
        </activity>
        <activity
            android:name="com.swe.gruppe4.freespace.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.swe.gruppe4.freespace.LectureListActivity"
            android:label="Veranstaltungen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.swe.gruppe4.freespace.AddLectureActivity" />
        <activity android:name="com.swe.gruppe4.freespace.LectureEditActivity" />
        <activity
            android:name="com.swe.gruppe4.freespace.RoomActivity"
            android:label="@string/title_activity_room"
            android:parentActivityName="com.swe.gruppe4.freespace.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.swe.gruppe4.freespace.TagsFilterActivity"
            android:label="@string/title_activity_filter_tags" />
        <activity
            android:name="com.swe.gruppe4.freespace.TagSetActivity"
            android:label="@string/title_activity_set_tags" />
        <activity
            android:name="com.swe.gruppe4.freespace.Settings2Activity"
            android:label="@string/title_activity_settings2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.swe.gruppe4.freespace.EmptyActivity" />
        <activity
            android:name="com.swe.gruppe4.freespace.ActiveSessionActivity"
            android:label="@string/title_activity_active_session"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.swe.gruppe4.freespace.RoomDetailsActivity" />
        <activity
            android:name="com.swe.gruppe4.freespace.QRScanActivity"
            android:label="@string/qrscan"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"/>

        <service
            android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
    </application>



</manifest>